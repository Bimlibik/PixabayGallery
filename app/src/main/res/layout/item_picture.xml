<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="ru.bimlibik.pixabaygallery.data.Picture" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:preview="@{item.previewURL}"
            android:contentDescription="@string/content_description_default" />

        <TextView
            android:id="@+id/tv_set_picture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="8dp"
            android:background="#66FFFFFF"
            android:text="@string/label_set_picture"
            android:textColor="@color/pictureTextColor"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>